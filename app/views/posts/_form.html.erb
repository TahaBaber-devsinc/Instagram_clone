<div class="reg-form">
  <div class="reg-content border">
    <h2 class="logo"><%= type %> Post</h2>
    <div class= "sign-up-text">  Posts are shared with your friends and followers</div>
    <hr>
    <br>
    <%= form_with model: model_obj do |f| %>
      <div class="field">
        <%= f.text_field :body,  placeholder: "#{type} Caption", class: "form-control"%>
      </div>
      <%if type == "Add"%>
      <div class="field input-group">
        <%= f.file_field :images,  multiple: true, class: "form-control", accept: "image/*", direct_upload: true%>
      </div>
      <%end%>
      <div class="actions">
        <%= f.submit "#{type} Post" , class: "btn btn-primary full-width"%>
      </div>
    <% end %>
    <br>
    <hr>
  </div>
</div>
