<div class="user-page-posts">
  <div class ="user-page">
    <%= user_profile_pic%>
    <div class = "profile-info">
      <h3><%= @user.username%></h3>
      <div class="count-info-flex">
        <span class="count-info"><b><%=@user.posts.count%></b> posts</span>
        <span class="count-info"><b> <%=@user.followers.count%></b> followers</span>
        <span class="count-info"><b><%=@user.followees.count%></b> following</span>
      </div>
      <h6><b><%= @user.email%></b></h6>
    </div>
    <%if current_user != @user %>
      <%unless current_user.followships.exists?(following_id: @user.id)%>
        <%= public_user_btn%>
      <%else%>
        <%= button_to 'Unfollow', followship_path(following_id: @user), method: :delete , class: "btn btn-outline-secondary"%>
      <%end%>
    <%else%>
      <div class="d-flex flex-column">
        <%= account_btn%>
        <%= story_btn%>
        <%= private_btn%>
      </div>
    <%end%>
  </div>
  <hr>
  <%unless @user != current_user && !@user.followers.exists?(current_user.id) && @user.account_type == 'Private'%>
    <div class="user-posts">
      <div class="user-post-heading">
        <h2 class="text-center">Posts</h2>
        <div class="add-post-btn">
          <%if current_user == @user%>
            <%= button_to 'Add Post', new_post_path, method: :get, class: "btn btn-outline-dark "%>
          <%end%>
        </div>
      </div>
      <div class="posts">
        <%@posts.each do |post|%>
          <%if post.images.count>0%>
            <%= link_to image_tag(post.images.first, width: "200", height: "200", class: "post-pic border"), post%>
          <%end%>
        <%end%>
      </div>
    </div>
  <%end%>
</div>
