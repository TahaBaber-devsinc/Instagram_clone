<div class="user-page-posts">
  <div class ="user-page">
    <div class = "profile-pic-div">
      <%if @user == current_user%>
        <%if @user.image.attached?%>
          <%=link_to image_tag(@user.image ,width: "150", height: "150", class: "profile-pic border border-3"), new_user_profile_picture_path(current_user)%>
        <%else%>
          <%=link_to image_tag('data:image/jpeg;base64,' ,width: "150", height: "150", class: "profile-pic border border-3"), new_user_profile_picture_path(current_user)%>
        <%end%>
      <%else%>
        <%if @user.image.attached?%>
          <%=link_to image_tag(@user.image ,width: "150", height: "150", class: "profile-pic border border-3"), user_stories_path(@user)%>
        <%else%>
          <%=link_to image_tag('data:image/jpeg;base64,' ,width: "150", height: "150", class: "profile-pic border border-3"), user_stories_path(@user)%>
        <%end%>
      <%end%>
    </div>
    <div class = "profile-info">
      <h3><%= @user.username%></h3>
      <div class="count-info-flex">
        <span class="count-info"><b><%=@user.posts.count%></b> posts</span>
        <span class="count-info"><b> <%=@user.followers.count%></b> <%= link_to "followers", followship_followers_path(id: params[:id])%></span>
        <span class="count-info"><b><%=@user.followees.count%></b> <%= link_to "following" , followship_followees_path(id: params[:id])%></span>
      </div>
      <h6><b><%= @user.email%></b></h6>
    </div>
    <%if current_user.id != params[:id].to_i%>
      <%unless current_user.followships.exists?(following_id: params[:id])%>
        <%if @user.account_type == 'Public'%>
          <%= button_to 'Follow', followship_create_path(following_id: @user), method: :post , class: "btn btn-outline-dark follow-btn"%>
        <%elsif !current_user.requests.exists?(followee_id: @user.id)%>
          <%= button_to 'Request', requests_path(id: @user.id), method: :post , class: "btn btn-outline-dark follow-btn"%>
        <%else%>
          <%= button_to 'Cancel Request', request_path(id: @user.id), method: :delete , class: "btn btn-outline-dark follow-btn"%>
        <%end%>
      <%else%>
        <%= button_to 'Unfollow', followship_destroy_path(following_id: @user), method: :delete , class: "btn btn-outline-secondary"%>
      <%end%>
    <%else%>
      <div class="d-flex flex-column">
        <%if current_user.account_type == 'Public'%>
          <%= button_to 'Private',  user_path, method: :put , class: "btn btn-outline-secondary"%>
        <%elsif current_user.account_type == 'Private'%>
          <%= button_to 'Public',  user_path, method: :put , class: "btn btn-outline-secondary"%>
        <%end%>
        <%= button_to 'Add Story',  new_user_story_path(user_id: @user.id), method: :get , class: "btn btn-outline-dark"%>
        <%= button_to 'View Story',  user_stories_path(user_id: @user.id), method: :get , class: "btn btn-outline-dark"%>
        <%if @user.account_type == "Private"%>
          <%= button_to 'View Requests',  requests_path ,method: :get, class: "btn btn-outline-secondary"%>
        <%end%>
      </div>
    <%end%>
  </div>
  <hr>
  <%unless @user != current_user && !@user.followers.exists?(current_user.id) && @user.account_type == 'Private'%>
    <div class="user-posts">
      <div class="user-post-heading">
        <h2 class="text-center">Posts</h2>
        <div class="add-post-btn">
          <%if current_user.id == params[:id].to_i%>
            <%= button_to 'Add Post', new_post_path, method: :get, class: "btn btn-outline-dark "%>
          <%end%>
        </div>
      </div>
      <div class="posts">
        <%@posts.each do |post|%>
          <%if post.images.count>0%>
            <%= link_to image_tag(post.images.first, width: "200", height: "200", class: "post-pic border"), post, local: true, remote: false%>
          <%end%>
        <%end%>
      </div>
    </div>
  <%end%>
</div>
